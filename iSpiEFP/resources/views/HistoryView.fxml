<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.ispiefp.app.analysis.HistoryViewController">
    <HBox id="Hbox" alignment="CENTER" spacing="5.0" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10"
          AnchorPane.topAnchor="10">
        <Label text="Search"/>
        <TextField fx:id="jobSearchField" HBox.hgrow="ALWAYS"/>
    </HBox>
    <GridPane hgap="10" AnchorPane.bottomAnchor="47" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10"
              AnchorPane.topAnchor="47">
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints vgrow="ALWAYS"/>
        </rowConstraints>
        <TableView fx:id="fragmentList" prefHeight="-Infinity" prefWidth="-Infinity" GridPane.columnIndex="0"
                   GridPane.rowIndex="0">
            <columns>
                <TableColumn fx:id="fragmentName" maxWidth="400.0" minWidth="100.99999237060547"
                             prefWidth="100.99999237060547" text="Job Name"/>
                <TableColumn fx:id="fragmentFile" maxWidth="5000" minWidth="10" prefWidth="30.0" text="Status"/>
                <TableColumn fx:id="electrostaticsIndicator" maxWidth="20.0" minWidth="0.0" prefWidth="20.0" text="E"/>
                <TableColumn fx:id="XRIndicator" maxWidth="20.0" minWidth="0.0" prefWidth="0.0" text="X"/>
                <TableColumn fx:id="polarizationIndicator" maxWidth="20.0" minWidth="20.0" prefWidth="20.0" text="P"/>
                <TableColumn fx:id="dispersionIndicator" maxWidth="76.0" minWidth="0.0" prefWidth="66.0" text="D"/>
                <TableColumn fx:id="basisSetIndicator" maxWidth="160" minWidth="45.0" prefWidth="55.0"
                             text="Basis Set"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
        <VBox prefHeight="-Infinity" prefWidth="-Infinity" GridPane.columnIndex="1" GridPane.rowIndex="0">
            <Label style="-fx-font-size: 20px" text="Preview"/>
            <Pane fx:id="previewPane" VBox.vgrow="ALWAYS"/>
        </VBox>
    </GridPane>
    <HBox alignment="BOTTOM_RIGHT" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
        <!--        <Button fx:id="selectButton" mnemonicParsing="false" onAction="#handleSelection" text="Select Fragment"/>-->
        <Button fx:id="selectButton" mnemonicParsing="false" text="Select Fragment"/>
    </HBox>
</AnchorPane>
