<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:id="root" prefHeight="500.0" prefWidth="659.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.ispiefp.app.metaDataSelector.MetaDataSelectorController">
    <top>
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="659.0">
            <children>
                <TableView fx:id="fragmentList" layoutX="0.0" layoutY="52.0" prefHeight="396.0" prefWidth="660.0">
                    <columns>
                        <TableColumn fx:id="fragmentName" maxWidth="400.0" minWidth="180.0" prefWidth="180.0" text="Fragment Name" />
                        <TableColumn fx:id="fragmentFile" maxWidth="5000" minWidth="10" prefWidth="100" text="Contained In" />
                        <TableColumn fx:id="electrostaticsIndicator" maxWidth="20.0" minWidth="20.0" prefWidth="20.0" text="E" />
                        <TableColumn fx:id="XRIndicator" maxWidth="20.0" minWidth="20.0" prefWidth="20.0" text="X" />
                        <TableColumn fx:id="polarizationIndicator" maxWidth="20.0" minWidth="20.0" prefWidth="20.0" text="P" />
                        <TableColumn fx:id="dispersionIndicator" maxWidth="20.0" minWidth="20.0" prefWidth="20.0" text="D" />
                        <TableColumn fx:id="basisSetIndicator" maxWidth="160" minWidth="120" prefWidth="140" text="Basis Set" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
                <HBox id="Hbox" alignment="CENTER" spacing="5.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
                    <children>
                        <Label text="Fragment Name:" />
                        <TextField fx:id="fragmentSearchField" prefWidth="-1.0" HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>
                <Button fx:id="selectButton" layoutX="520.0" layoutY="459.0" mnemonicParsing="false" onAction="#handleSelection" text="Select Fragment" />
            </children>
        </AnchorPane>
    </top>
</BorderPane>
