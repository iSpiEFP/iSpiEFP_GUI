<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.lang.Double?>
<?import javafx.scene.text.Text?>
<AnchorPane minHeight="0.0" minWidth="0.0" fx:id="root" prefHeight="500.0"
            prefWidth="1200.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10"
              AnchorPane.bottomAnchor="47" AnchorPane.topAnchor="47" hgap="10">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="50.0" prefWidth="400"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="50.0" prefWidth="400"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" percentHeight="50.0" prefHeight="400" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" percentHeight="50.0" prefHeight="400" vgrow="SOMETIMES" />
        </rowConstraints>
        <GridPane prefHeight="-Infinity" prefWidth="-Infinity" GridPane.columnIndex="0" GridPane.rowIndex="0"
            hgap="10" vgap="10">
            <Label text="Job Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <Text fx:id="jobName" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Label text="EFP Files Used:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <ComboBox fx:id="usedEFPFiles" GridPane.rowIndex="1" GridPane.columnIndex="1" />
            <Button fx:id="visualizeInputButton" GridPane.rowIndex="1" GridPane.columnIndex="2" text="Visualize" />
            <Label text="Time Submitted:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
            <Text fx:id="submissionTime" GridPane.rowIndex="2" GridPane.columnIndex="1" />
            <Label text="Time Finished:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
            <Text fx:id="finishTime" GridPane.rowIndex="3" GridPane.columnIndex="1" />
            <Label text="Output File:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
            <Text fx:id="outputFile" GridPane.rowIndex="4" GridPane.columnIndex="1" />
            <Button fx:id="visualizeOutputButton" GridPane.rowIndex="4" GridPane.columnIndex="2" text="Visualize" />
            <Label text="Error File:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
            <Text fx:id="errorFile" GridPane.rowIndex="5" GridPane.columnIndex="1" />
            <Button fx:id="visualizeErrorButton" GridPane.rowIndex="5" GridPane.columnIndex="2" text="Visualize" />

        </GridPane>
        <VBox prefHeight="-Infinity" prefWidth="-Infinity" GridPane.columnIndex="1" GridPane.rowIndex="0">
            <Text fx:id="currentlyVisualizedFile" text="Currently Visualized File: None" style="-fx-font-size: 20px" />
            <Pane fx:id="previewPane" VBox.vgrow="ALWAYS"/>
        </VBox>
        <TextArea fx:id="fileContentsTextArea" prefHeight="244.0" prefWidth="600.0"
                  GridPane.columnIndex="1" GridPane.rowIndex="1" disable="true" />
    </GridPane>
    <HBox alignment="BOTTOM_RIGHT" AnchorPane.bottomAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.leftAnchor="10">
        <!--        <Button fx:id="selectButton" mnemonicParsing="false" onAction="#handleSelection" text="Select Fragment"/>-->
        <Button fx:id="selectButton" mnemonicParsing="false" text="Select Fragment"/>
    </HBox>
</AnchorPane>
