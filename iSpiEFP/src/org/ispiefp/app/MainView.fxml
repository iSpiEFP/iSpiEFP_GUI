                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" onAction="#viewAxisX" text="Axis X" />
                        <MenuItem mnemonicParsing="false" onAction="#viewAxisY" text="Axis Y" />
                        <MenuItem mnemonicParsing="false" onAction="#viewAxisZ" text="Axis Z" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <Menu mnemonicParsing="false" text="Zoom">
                          <items>
                            <MenuItem mnemonicParsing="false" onAction="#viewZoomIn" text="Zoom In" />
                              <MenuItem mnemonicParsing="false" onAction="#viewZoomOut" text="Zoom Out" />
                              <SeparatorMenuItem mnemonicParsing="false" />
                              <MenuItem mnemonicParsing="false" onAction="#viewZoom50" text="50%" />
                              <MenuItem mnemonicParsing="false" onAction="#viewZoom75" text="75%" />
                              <MenuItem mnemonicParsing="false" onAction="#viewZoom100" text="100%" />
                              <MenuItem mnemonicParsing="false" onAction="#viewZoom150" text="150%" />
                              <MenuItem mnemonicParsing="false" onAction="#viewZoom200" text="200%" />
                          </items>
                        </Menu>
                    </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Search">
                    <items>
                        <Menu mnemonicParsing="false" text="Find EFP Files ">
                          <items>
                            <MenuItem mnemonicParsing="false" onAction="#searchFindEFPPublicDatabase" text="Search Public Database" />
                          </items>
                        </Menu>
                    </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Calculate">
                    <items>
                      <MenuItem mnemonicParsing="false" onAction="#calculateLibefpSetup" text="Libefp Setup" />
                        <MenuItem mnemonicParsing="false" onAction="#calculateGamessSetup" text="Gamess Setup" />
                        <Menu mnemonicParsing="false" text="Monitor Jobs">
                          <items>
                            <MenuItem mnemonicParsing="false" onAction="#calculateLibefpHistory" text="Libefp History" />
                              <MenuItem mnemonicParsing="false" onAction="#calculateGamessHistory" text="Gamess History" />
                          </items>
                        </Menu>
                        <MenuItem mnemonicParsing="false" onAction="#calculateEditServers" text="Edit Servers" />
                    </items>
                  </Menu>
                        <Menu mnemonicParsing="false" text="Gamess">
                            <items>

                                <MenuItem mnemonicParsing="false" onAction="#openGamessSubmissionHistoryWindow" text="Submission History.." />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Libefp">
                            <items>

                                <MenuItem mnemonicParsing="false" onAction="#openSubmissionHistoryWindow" text="Submission History.." />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Server">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#openServersListWindow" text="Edit Servers.." />
                            </items>
                        </Menu>

                        <Menu mnemonicParsing="false" text="Help">
                            <items>
                        <MenuItem disable="true" mnemonicParsing="false" onAction="#helpCheckForUpdates" text="Check for Updates..." />
                                <MenuItem mnemonicParsing="false" onAction="#helpAbout" text="About" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" onAction="#helpAboutJmol" text="About Jmol" />
                        <MenuItem mnemonicParsing="false" onAction="#helpJmolWiki" text="Jmol Wiki" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" onAction="#helpJmolConsole" text="Jmol Console" />
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
                <Pane prefHeight="55.0" prefWidth="200.0">
                    <children>
                        <ToggleButton fx:id="haloButton" layoutX="14.0" layoutY="5.0" mnemonicParsing="false" onAction="#toggleHalo" prefHeight="45.0" prefWidth="45.0" text="Halo On" />
                        <ToggleButton fx:id="snipButton" layoutX="76.0" layoutY="5.0" mnemonicParsing="false" onAction="#toggleSnip" prefHeight="45.0" prefWidth="45.0" text="Fragmenation" />
                        <Button fx:id="undoButton" layoutX="139.0" layoutY="5.0" mnemonicParsing="false" onAction="#undo" prefHeight="45.0" prefWidth="70.0" text="undo" />
                        <ToggleButton fx:id="playPauseButton" layoutX="221.0" layoutY="5.0" mnemonicParsing="false" onAction="#togglePlay" prefHeight="45.0" prefWidth="45.0" text="play_pause" />
                        <Button fx:id="consoleButton" layoutX="283.0" layoutY="5.0" mnemonicParsing="false" onAction="#displayConsole" prefHeight="45.0" prefWidth="45.0" text="show_console" />
                        <Button fx:id="searchFragmentsButton" layoutX="343.0" layoutY="5.0" mnemonicParsing="false" onAction="#searchFragments" prefHeight="45.0" prefWidth="120.0" text="Search Fragments" />
                        <Button fx:id="libefpButton" layoutX="473.0" layoutY="5.0" mnemonicParsing="false" onAction="#libefp" prefHeight="45.0" prefWidth="70.0" text="libefp" />
                    </children>
                </Pane>
            </children>
        </VBox>
    </top>
    <bottom>
        <HBox prefHeight="0.0" prefWidth="550.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="iSpiEFP">
                    <HBox.margin>
                        <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
                    </HBox.margin>
                </Label>
            </children>
            <BorderPane.margin>
                <Insets />
            </BorderPane.margin>
            <padding>
                <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
            </padding>
        </HBox>
    </bottom>
    <center>
        <SplitPane fx:id="leftRightSplitPane" dividerPositions="0.5" prefHeight="160.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <items>
                <ListView fx:id="leftListView" prefHeight="200.0" prefWidth="200.0" />
                <SplitPane fx:id="middleRightSplitPane" dividerPositions="0.5" prefHeight="160.0" prefWidth="200.0">
                    <items>
                        <Pane fx:id="middlePane" prefHeight="200.0" prefWidth="200.0" />
                        <SplitPane fx:id="rightVerticalSplitPane" dividerPositions="0.5" orientation="VERTICAL" prefHeight="200.0" prefWidth="160.0">
                            <items>
                                <Pane fx:id="upperRightPane" prefHeight="200.0" prefWidth="200.0" />
                                <Pane fx:id="bottomRightPane" prefHeight="200.0" prefWidth="200.0" />
                            </items>
                        </SplitPane>
                    </items>
                </SplitPane>
            </items>
        </SplitPane>
    </center>
